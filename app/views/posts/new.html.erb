<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">新規投稿</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @post do |f| %>
      <div class="form-group">
        <label class="form-label">ビーチ名</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">市・エリア</label>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">おすすめポイント</label>
        <%=f.text_area :body, rows: 6, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">写真</label><br>
        <%= f.file_field :images, multiple: true %>
      </div>
      <%= f.submit '投稿する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
